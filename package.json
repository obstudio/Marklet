{
  "name": "markletjs",
  "version": "1.1.0",
  "description": "A markup language designed for API manual pages.",
  "main": "dist/Marklet.js",
  "scripts": {
    "all": "npm run lint && npm run build:prod && npm run test",
    "publish": "lerna publish --no-git-tag-version --no-push",
    "bootstrap": "lerna bootstrap --hoist --no-ci",
    "build": "tsc -b && node build/build -sr",
    "build:prod": "tsc -b && node build/build -psr",
    "build:renderer": "node build/build -r",
    "build:server": "node build/build -s",
    "build:tsc": "tsc -b",
    "clear": "node build/clear",
    "test": "node packages/test/runner.js",
    "lint": "tslint packages/**/src/*.ts && eslint ."
  },
  "bin": {
    "marklet": "./bin/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/obstudio/Marklet.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/obstudio/Marklet/issues"
  },
  "homepage": "https://github.com/obstudio/Marklet#readme",
  "devDependencies": {
    "@octokit/rest": "^15.12.0",
    "@sfc2js/clean-css": "^1.1.1",
    "@sfc2js/sass": "^1.0.1",
    "@types/cheerio": "^0.22.9",
    "@types/js-yaml": "^3.11.2",
    "@types/node": "^10.10.1",
    "@types/ws": "^6.0.1",
    "ajv": "^6.5.3",
    "cheerio": "^1.0.0-rc.2",
    "commander": "^2.18.0",
    "eslint": "^5.6.0",
    "eslint-plugin-vue": "^5.0.0-beta.3",
    "fast-deep-equal": "^2.0.1",
    "lerna": "^3.4.0",
    "node-sass": "^4.9.3",
    "prettier": "^1.14.3",
    "sfc2js": "^3.3.0",
    "tslint": "^5.11.0",
    "typescript": "^3.0.3",
    "webpack": "^4.19.1"
  }
}
